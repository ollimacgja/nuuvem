<td class='col-md-1'><%= image_tag(game.boxshot, class: 'img-responsive') %></td>
<td class='col-md-1'><%= game.name %></td>
<td class='col-md-1'><%= game.sku %></td>
<td class='col-md-2'><%= game.description %></td>
<td class='col-md-1'><%= Category.find(game.category_id).name %></td>
<td class='col-md-1'><%= boolean_helper(game.published) %></td>
<td class="text-right col-md-2">
  <%= link_to content_tag(:i, nil, class: 'fa fa-edit'), edit_admin_game_path(game) %>
  <%= link_to content_tag(:i, nil, class: 'fa fa-trash'), admin_game_path(game), method: :delete, data: { confirm: t('admin.are_you_sure')}%>
</td>