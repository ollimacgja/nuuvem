<!DOCTYPE html>
<html>
<%= render 'layouts/header' %>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to t('site.title'), root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <p class="navbar-text"></p>
          <p class="navbar-text"><%= login_helper %></p>
          <li class="dropdown">
            <%= link_to image_tag("flags/#{I18n.locale}.png"), '#', class: 'dropdown-toggle', data:{ toggle: 'dropdown'} %>
            <ul class="dropdown-menu locale-menu">
              <% I18n.available_locales.each do |locale| %>
                <li> <%= link_to image_tag("flags/#{locale}.png"), change_locale_path(locale) %> </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <%= render 'layouts/flashes' %>
  <div class="container-fluid">
    <div class="row">
      <%= yield %>
    </div>
</div>

</body>
</html>
